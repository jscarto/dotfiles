" use wombat color scheme
colo wombat
filetype on
filetype plugin on
syntax enable
set autoindent
set expandtab
set smarttab

set shiftwidth=3
set softtabstop=3

set mouse=a
set hlsearch

" highlight current line
set cul
hi CursorLine ctermbg=DarkGray

" turn on number lines
set nu
hi LineNr ctermbg=black ctermfg=DarkGray
" show status line
set laststatus=2

